; To make use of this file in Visual Studio:
; Tools -> Extensions and Updates, search for EditorConfig and install the extension.

; Top-most EditorConfig file
root = true

; Line ending
[*]
end_of_line = crlf
indent_size = 2
indent_style = space
max_line_length = 150
trim_trailing_whitespace = true

; .NET
[*.{cpp,cs,vb}]
indent_size = 4
indent_style = space
